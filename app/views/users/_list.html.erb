<div  class="col-md-11">
<p id="notice"></p>
<h2>User info</h2>
<%= attachment_image_tag user,:profile_image,size:'100x100', fallback: "no_image.jpeg" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
       <th>name</th>
  	   <th><%= user.name %></th>
      </tr>
        <tr>
          <th>introduction</th>
  	      <th><%= user.introduction %></th>
  	      <th></th>
        </tr>
    </tbody>
  </table>
    <div>
  　   <%= link_to 'edit', edit_user_path(user.id),class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_11515" %>
    </div>
<h2>New book</h2>
<%= form_with model: book, local: true do |f| %>
  <div class="form-group">
    <p>Title</p>
    <label><%= f.text_field :title %></label>
  </div>
    <div class="form-group">
      <label>Opinion<%= f.text_area :body %></label>
    </div>
    <div class="form-group">
     <%= f.submit 'Create Book' %>
    </div>
<% end %>
</div>
            
            
