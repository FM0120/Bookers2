<div class="container container px-5 px-sm-0">
 <div class="row">
  <%= render 'books/errors', book:@book %>
  <div class="col-md-3">
   <%= render 'users/list', book:@book, user:@user %>
  </div>
  <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <%= link_to user_path(book.user.id) do %>
              <td><%= attachment_image_tag @user,:profile_image,size:'40x40',fallback: "no_image.jpeg"  %></td>
            <% end %>
            <td>
             <%= link_to book_path(book) do %>
             <%= book.title %>
             <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
      </table>
  </div>
 </div>
</div>

<footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>


