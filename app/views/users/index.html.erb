<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render 'users/list', book:@book, user:@user %>
  </div>
  <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
       <thed>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
       </thed>
      <tbody>
       <% @users.each do |user| %>
          <tr>
            <td>
             <%= attachment_image_tag user,:profile_image,size:'40x40',fallback: "no_image.jpeg"  %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
        <% end %>
      </tbody>
      </table>
  </div>
 </div>
</div>

<footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>

