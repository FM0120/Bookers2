<div class="container">
    <div class="row">
      <div  class="col-md-3">
      <%= render 'list', book: @new_book, user: @user %></div>
      <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
        	 <table class="table">
          		<tbody>
          		  <tr>
                  <td>
                    <%= link_to user_path(@user) do %>
                    <%= attachment_image_tag @user,:profile_image,size:'40x40', fallback: "no_image.jpeg" %>
                    <p><%= @user.name %></p>
                  </td>
                  <td><%= @book.title %></td>
                    <% end %>
                  <td><%= @book.body %></td>
                  <td>
                    <% if current_user.id == @book.user_id %>
                    <%= link_to 'Edit', edit_book_path(@book) %>
                    <%= link_to 'Destroy', book_path(@book), method: :delete %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
      </div>
    </div>
</div>



<footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
